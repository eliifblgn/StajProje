@model BedenNumara

<h2>Beden/Numara Ekle</h2>
<hr />

@using (Html.BeginForm("Create", "BedenNumara", FormMethod.Post))
{
    <div class="col-md-6">
        <label class="page-title"></label>
        <br />
        <br/>
        <input type="text" class="yumusak-textbox" name="Beden" required />

        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
}

<style>
    .page-title {
        font-size: 24px; /* Yazı boyutu */
        line-height: 50px; /* Satır yüksekliği */
        font-weight: 200; /* Yazı kalınlığı */
        font-style: normal; /* Yazı stili */
        text-align: left; /* Metin hizalaması */
        color: #000000; /* Yazı rengi */
        border-style: none; /* Kenarlık stili */
    }

    .yumusak-textbox {
        border-radius: 5px; /* Kenarların yuvarlaklığını ayarlayın */
        border: 1px solid #ccc; /* Opsiyonel: Kenar çizgisi rengi ekleyin */
        padding: 5px; /* Opsiyonel: Giriş alanının içine dolgu ekleyin */
    }
</style>