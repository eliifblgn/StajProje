@model SecKaliteDb.Models.Personel

@{
    ViewData["Title"] = "Create";
}

<style>
    .page-title {
        font-size: 36px; /* Yazı boyutu */
        line-height: 48px; /* Satır yüksekliği */
        font-weight: 100; /* Yazı kalınlığı */
        font-style: normal; /* Yazı stili */
        text-align: left; /* Metin hizalaması */
        t/* ext-decoration: underline; /* Altı çizili */ */
        color: #000000; /* Yazı rengi */
        border-style: none; /* Kenarlık stili */
    }
</style>

<h1 class="page-title">Yeni Personel</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Adi" class="control-label">Adı:</label>
                    <input asp-for="Adi" class="form-control" required/>
                    <span asp-validation-for="Adi" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Soyadi" class="control-label">Soyadı:</label>
                    <input asp-for="Soyadi" class="form-control" required/>
                    <span asp-validation-for="Soyadi" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="SicilNo" class="control-label">Sicil No:</label>
                    <input asp-for="SicilNo" class="form-control" required/>
                    <span asp-validation-for="SicilNo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PersonelBirimId" class="control-label">Birim:</label>
                    <select asp-for="PersonelBirimId" class="form-control" asp-items="ViewBag.BirimId" required>
                        <option value="">Seçiniz...</option>
                    </select>
                    <span asp-validation-for="PersonelBirimId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="UnvanId" class="control-label">Unvan:</label>
                    <select asp-for="UnvanId" class="form-control" asp-items="ViewBag.UnvanId" required>
                        <option value="">Seçiniz...</option>
                    </select>
                    <span asp-validation-for="UnvanId" class="text-danger"></span>
                </div>
               @*  <div class="form-group col-md-6">
                    <label asp-for="KkdEnvanterTakipId" class="control-label"></label>
                    <input asp-for="KkdEnvanterTakipId" class="form-control" />
                    <span asp-validation-for="KkdEnvanterTakipId" class="text-danger"></span>
                </div> *@
            </div>

            <br />
            @* <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Silindi" /> @Html.DisplayNameFor(model => model.Silindi)
                </label>
            </div>
            <br /> *@
           
            <div class="form-group d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-info">GERİ</a>
                <input type="submit" value="EKLE" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>




